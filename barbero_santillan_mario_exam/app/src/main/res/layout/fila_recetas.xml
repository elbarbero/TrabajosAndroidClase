<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="#fcc107"
    app:cardCornerRadius="20dp"
    app:cardElevation="21dp">

    <RelativeLayout
        android:id="@+id/rLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgFoto"
            android:text="NOMBRE:" />

        <TextView
            android:id="@+id/txtIngrediente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgFoto"
            android:layout_marginStart="77dp"
            android:layout_toEndOf="@+id/imgFoto"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtTiempo"
            android:text="textView" />

        <TextView
            android:id="@+id/txtTiempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtRaciones"
            android:layout_alignStart="@+id/txtRaciones"
            android:layout_marginBottom="11dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtRaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtIngrediente"
            android:layout_alignStart="@+id/txtIngrediente"
            android:layout_marginBottom="11dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtTiempo"
            android:layout_alignEnd="@+id/textView6"
            android:text="TIEMPO:" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView7"
            android:layout_alignTop="@+id/txtRaciones"
            android:text="N RACIÃ“N" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtIngrediente"
            android:layout_alignBottom="@+id/txtIngrediente"
            android:layout_alignStart="@+id/textView8"
            android:text="INGRED" />


    </RelativeLayout>


</android.support.v7.widget.CardView>